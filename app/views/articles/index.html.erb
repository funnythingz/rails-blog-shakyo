<section>

    <header class="articles-index-header">
        <h1 class="pull-left">Articles</h1>
        <div class="pull-right create-new-article"><%= link_to 'New article', new_article_path, {:class => 'btn btn-default btn-lg'} %></div>
    </header>

    <div class="list-group">
        <% @articles.each do |article| %>
        <a href="<%= article_path(article) %>" class="list-group-item clearfix" id="<%= article.id %>">
            <article>
                <div class="pull-left">
                    <h4 class="list-group-item-heading"><%= article.title %></h4>
                    <p class="list-group-item-text"><%= article.text %></p>
                </div>
                <div class="pull-right">
                    <button type="button" class="btn btn-info btn-edit" data-link="<%= edit_article_path(article) %>"><span class="glyphicon glyphicon-edit"></span></button>
                </div>
            </article>
        </a>
        <% end %>
    </div>

</section>
