<section>

    <h1>Articles <%= link_to 'New article', new_article_path, {:class => 'btn btn-default btn-lg'} %></h1>

    <div class="list-group">
        <% @articles.each do |article| %>
            <a href="#" class="list-group-item" id="<%= article.id %>">
            <h4 class="list-group-item-heading"><%= article.title %></h4>
            <p class="list-group-item-text"><%= article.text %></p>
        </a>
        <% end %>
    </div>

</section>
