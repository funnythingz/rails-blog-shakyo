<h1>new Article</h1>

<%= form_for :article, url: articles_path do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :class => 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :text %>
        <%= f.text_area :text, :class => 'form-control' %>
    </div>

    <%= f.submit :class => 'btn btn-default' %>
<% end %>
